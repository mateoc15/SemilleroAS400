package co.com.fincaraiz.qa.screenplayfincaraiz.util;

import static co.com.fincaraiz.qa.screenplayfincaraiz.userinterfaces.FincaRaizHomePage.CATEGORY_ITEM;

import java.util.List;

import org.openqa.selenium.By;

import net.serenitybdd.core.pages.WebElementFacade;

public class Utilites {

	public Utilites() {
		// TODO Auto-generated constructor stub
	}
	
	
	public static int randomNumber(int size) {
		return (int) Math.floor(Math.random()*size);
	}
	
	
	public static WebElementFacade getTheElement(List<WebElementFacade> listElements, String text) {
		WebElementFacade element = null;
		String text2;		
		for(int i=0; i<listElements.size(); i++) {
			String xpath = String.format("//label[contains(text(),'%s')]", text);
			System.out.println(listElements.get(i).findElement(By.xpath(xpath)).getText()+i);
			text2=listElements.get(i).findElement(By.xpath("label")).getText();
			System.out.println(i);
			if(text==text2) {
				return listElements.get(i);
			}
		}
		System.out.println("no retorna nada");
		return element;
	}
	

}
